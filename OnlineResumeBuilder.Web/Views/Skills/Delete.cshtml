@model OnlineResumeBuilder.Web.Models.Skill

@{
    ViewData["Title"] = "Delete Skill";
}

<div class="section-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0 text-danger">Delete Skill</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-danger mb-4">
        <h5><i class="bi bi-exclamation-triangle"></i> Warning</h5>
        <p>Are you sure you want to delete this skill? This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SkillName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SkillName)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SkillType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SkillType)</dd>
                
                <dt class="col-sm-3">User</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserInfo.FullName)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div> 