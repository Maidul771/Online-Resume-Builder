@model OnlineResumeBuilder.Web.Models.Skill

@{
    ViewData["Title"] = "Edit Skill";
}

<div class="section-container">
    <h2 class="section-title">Edit Skill</h2>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label asp-for="SkillName" class="form-label"></label>
                            <input asp-for="SkillName" class="form-control" />
                            <span asp-validation-for="SkillName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SkillType" class="form-label"></label>
                            <select asp-for="SkillType" asp-items="ViewBag.SkillTypes" class="form-select"></select>
                            <span asp-validation-for="SkillType" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UserInfoId" class="form-label">User</label>
                            <select asp-for="UserInfoId" class="form-select" asp-items="ViewBag.UserInfoId"></select>
                            <span asp-validation-for="UserInfoId" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Tips</h5>
                </div>
                <div class="card-body">
                    <p>Update your skill information to keep your resume current and relevant.</p>
                    <p>Choose the most appropriate skill type that best represents your expertise in this area.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 