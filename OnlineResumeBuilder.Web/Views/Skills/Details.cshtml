@model OnlineResumeBuilder.Web.Models.Skill

@{
    ViewData["Title"] = "Skill Details";
}

<div class="section-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0">Skill Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SkillName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SkillName)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SkillType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SkillType)</dd>
                
                <dt class="col-sm-3">User</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserInfo.FullName)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
</div> 