@model OnlineResumeBuilder.Web.Models.Experience

@{
    ViewData["Title"] = "Delete Experience";
}

<div class="section-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0 text-danger">Delete Work Experience</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-danger mb-4">
        <h5><i class="bi bi-exclamation-triangle"></i> Warning</h5>
        <p>Are you sure you want to delete this work experience? This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-8">
                    <h4 class="card-title">@Model.Position</h4>
                    <h5 class="card-subtitle mb-2 text-muted">@Model.CompanyName</h5>
                </div>
                <div class="col-md-4 text-end">
                    <span class="badge bg-primary">
                        @Model.StartDate.ToString("MMM yyyy") - 
                        @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("MMM yyyy") : "Present")
                    </span>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-12">
                    <h5>Job Description</h5>
                    <div class="p-3 bg-light rounded">
                        <p class="mb-0">@Model.Details</p>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-12">
                    <h5>User</h5>
                    <p>@Html.DisplayFor(model => model.UserInfo.FullName)</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div> 