@model OnlineResumeBuilder.Web.Models.Objective

@{
    ViewData["Title"] = "Delete Objective";
}

<div class="section-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0 text-danger">Delete Career Objective</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-danger mb-4">
        <h5><i class="bi bi-exclamation-triangle"></i> Warning</h5>
        <p>Are you sure you want to delete this career objective? This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row mt-2">
                <div class="col-md-12">
                    <h5>Career Objective</h5>
                    <div class="p-3 bg-light rounded">
                        <p class="mb-0">@Model.Details</p>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <h5>User</h5>
                    <p>@Html.DisplayFor(model => model.UserInfo.FullName)</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div> 