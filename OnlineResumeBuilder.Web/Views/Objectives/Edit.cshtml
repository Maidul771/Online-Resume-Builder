@model OnlineResumeBuilder.Web.Models.Objective

@{
    ViewData["Title"] = "Edit Objective";
}

<div class="section-container">
    <h2 class="section-title">Edit Career Objective</h2>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Details" class="form-label">Career Objective</label>
                            <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Details" class="text-danger"></span>
                            <div class="form-text">Describe your career goals and aspirations (50-300 words).</div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserInfoId" class="form-label">User</label>
                            <select asp-for="UserInfoId" class="form-select" asp-items="ViewBag.UserInfoId"></select>
                            <span asp-validation-for="UserInfoId" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Tips</h5>
                </div>
                <div class="card-body">
                    <p>A good career objective should briefly highlight your:</p>
                    <ul>
                        <li>Professional identity</li>
                        <li>Key skills and strengths</li>
                        <li>Career goals and aspirations</li>
                        <li>Value you can bring to an employer</li>
                    </ul>
                    <p>Keep it concise, specific, and tailored to your target role.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 