@model OnlineResumeBuilder.Web.Models.Objective

@{
    ViewData["Title"] = "Objective Details";
}

<div class="section-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0">Career Objective Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row mt-2">
                <div class="col-md-12">
                    <h5>Career Objective</h5>
                    <div class="p-3 bg-light rounded">
                        <p class="mb-0">@Model.Details</p>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <h5>User</h5>
                    <p>@Html.DisplayFor(model => model.UserInfo.FullName)</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
</div> 