@model OnlineResumeBuilder.Web.Models.Reference

@{
    ViewData["Title"] = "Delete Reference";
}

<div class="section-container">
    <h2 class="section-title">Delete Reference</h2>
    
    <div class="alert alert-danger mb-4">
        <h4><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this reference?</h4>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">@Model.RefereeName</h4>
            <h6 class="card-subtitle mb-3 text-muted">@Model.Organization</h6>
            
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Email:</div>
                <div class="col-md-9">@Model.Email</div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.Phone))
            {
                <div class="row mb-2">
                    <div class="col-md-3 fw-bold">Phone:</div>
                    <div class="col-md-9">@Model.Phone</div>
                </div>
            }
            
            @if (!string.IsNullOrEmpty(Model.Relationship))
            {
                <div class="row mb-2">
                    <div class="col-md-3 fw-bold">Relationship:</div>
                    <div class="col-md-9">@Model.Relationship</div>
                </div>
            }
            
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">User:</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.UserInfo.FullName)</div>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div> 