@model OnlineResumeBuilder.Web.Models.Education

@{
    ViewData["Title"] = "Education Details";
}

<div class="section-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0">Education Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Degree.ToString() in @Model.Subject.ToString()</h4>
            <div class="row mt-4">
                <div class="col-md-6">
                    <h5>Institution</h5>
                    <p>@Model.Institution</p>
                </div>
                <div class="col-md-6">
                    <h5>Graduation Year</h5>
                    <p>@(Model.GraduationYear.HasValue ? Model.GraduationYear.Value.ToString() : "N/A")</p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <h5>User</h5>
                    <p>@Html.DisplayFor(model => model.UserInfo.FullName)</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
</div> 