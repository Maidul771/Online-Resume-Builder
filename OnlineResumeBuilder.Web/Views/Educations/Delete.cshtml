@model OnlineResumeBuilder.Web.Models.Education

@{
    ViewData["Title"] = "Delete Education";
}

<div class="section-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0 text-danger">Delete Education</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-danger mb-4">
        <h5><i class="bi bi-exclamation-triangle"></i> Warning</h5>
        <p>Are you sure you want to delete this education record? This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Degree.ToString() in @Model.Subject.ToString()</h4>
            <div class="row mt-4">
                <div class="col-md-6">
                    <h5>Institution</h5>
                    <p>@Model.Institution</p>
                </div>
                <div class="col-md-6">
                    <h5>Graduation Year</h5>
                    <p>@(Model.GraduationYear.HasValue ? Model.GraduationYear.Value.ToString() : "N/A")</p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <h5>User</h5>
                    <p>@Html.DisplayFor(model => model.UserInfo.FullName)</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div> 