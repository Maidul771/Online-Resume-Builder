@model IEnumerable<OnlineResumeBuilder.Web.Models.Certification>

@{
    ViewData["Title"] = "Certifications";
}

<div class="section-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0">Certifications</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Certification
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">No certifications have been added yet. Click the button above to add your certifications.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@item.CourseName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.Institute</h6>
                            @if (item.CompletionYear.HasValue)
                            {
                                <p class="mb-1">Year: @item.CompletionYear</p>
                            }
                            @if (!string.IsNullOrEmpty(item.CertificateUrl))
                            {
                                <a href="@item.CertificateUrl" class="btn btn-sm btn-outline-primary mt-2" target="_blank">
                                    <i class="bi bi-link-45deg"></i> View Certificate
                                </a>
                            }
                        </div>
                        <div class="card-footer bg-transparent d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="text-center mt-4">
    <a asp-controller="Resume" asp-action="Preview" class="btn btn-primary">
        <i class="bi bi-eye"></i> Preview Resume
    </a>
</div> 