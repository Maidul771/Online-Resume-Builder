@model OnlineResumeBuilder.Web.Models.Certification

@{
    ViewData["Title"] = "Delete Certification";
}

<div class="section-container">
    <h2 class="section-title text-danger">Delete Certification</h2>
    
    <div class="alert alert-warning mb-4">
        <h5>Are you sure you want to delete this certification?</h5>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@Model.CourseName</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(model => model.Institute):</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Institute)
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(model => model.CompletionYear):</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.CompletionYear)
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.CertificateUrl))
            {
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>@Html.DisplayNameFor(model => model.CertificateUrl):</strong>
                    </div>
                    <div class="col-md-9">
                        <a href="@Model.CertificateUrl" target="_blank">@Model.CertificateUrl</a>
                    </div>
                </div>
            }
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>User:</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.UserInfo.FullName)
                </div>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div> 