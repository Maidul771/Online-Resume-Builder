@model OnlineResumeBuilder.Web.Models.Certification

@{
    ViewData["Title"] = "Certification Details";
}

<div class="section-container">
    <h2 class="section-title">Certification Details</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@Model.CourseName</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(model => model.Institute):</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Institute)
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(model => model.CompletionYear):</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.CompletionYear)
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.CertificateUrl))
            {
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>@Html.DisplayNameFor(model => model.CertificateUrl):</strong>
                    </div>
                    <div class="col-md-9">
                        <a href="@Model.CertificateUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-link-45deg"></i> View Certificate
                        </a>
                    </div>
                </div>
            }
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>User:</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.UserInfo.FullName)
                </div>
            </div>
        </div>
    </div>
    
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div> 